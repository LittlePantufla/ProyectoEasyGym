<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Botón de retroceso -->
    <Button
        android:id="@+id/btnAtras"
        android:text="Atrás"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Contenedor principal para los controles -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/btnAtras">

        <!-- Título de los gritos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ronnie Coleman Gritos de levantamientos"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <!-- Botones de sonido -->
        <Button
            android:id="@+id/reproducir"
            android:text="Grito 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/reproducir2"
            android:text="Grito 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/reproducir3"
            android:text="Grito 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"/>

        <Button
            android:id="@+id/reproducir4"
            android:text="Grito 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"/>

        <!-- Título del WebView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Quien es realmente Ronnie Coleman?"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <!-- WebView para YouTube -->
        <WebView
            android:id="@+id/webView"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
